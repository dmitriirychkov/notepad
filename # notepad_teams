# notepad_teams

# Маршрут для добавления в таблицу:
ip route add xxx.xxx.xxx.xxx (куда) via xxx.xxx.xxx.xxx (через шлюз) dev *name (с какого девайса)
ip route add 192.168.124.236 via 192.168.104.254 dev bond0.43


ping3:
hping3 192.168.103.103		--udp			--destport 5060		--interface eth0.770	--baseport 9080		--keep				--data 300		--fast
#    [адрес назначения]	[заголовки пакетов]	[порт назначения]	[интерфейс источника]	[порт источника]	[не менять порт источника]	[размер тела пакета]	[10 п/с]
    

# Версия дистриба Linux:
lsb_release -a
cat /etc/*-release


# Блокировка/разблокировка IP
iptables -I INPUT 1 -s 192.168.124.236 -j DROP
iptables -D INPUT -s 192.168.124.236 -j DROP


# Добавление правила для медиа rtp в цепочку MEDIA:
iptables -I MEDIA -p udp --dport 1025:65001 -d 192.168.104.91 -j ACCEPT


tcpdump -vv host 192.168.14.67 -w test.pcap
# Снятие .pcap 


history | grep lv - просомтр команд по истории
# | - pipe - труба
# grep - фильтрация
# lv - команда начинает работу в Violin Group 


tail -F /var/log/bgwng/bgw_sp_1.log - вывоод логов
# tail (с англ. хвост) выводит последние 10 строк файла в операционной системе Linux и затем заканчивает выполнение; 
# -F работать будет в потоке, выводит все последние строки, которые появляться в файле;
# /var/log/bgwng/bgw_sp_1.log - путь директории до логов. Директория /var - это папка обычно содержит переменные баз данных, логов.


sudo sngrep -r
# sudo - утилита, предоставляющая привилегии root для выполнения административных операций в соответствии со своими настройками.
# sngrep - терминальная утилита, которая отлавливает SIP пакеты в реальном времени по Caller-Id и отображает ход потоков стрелками из узла в узел, аналогично используемым в SIP RFC. Данный инструмент был призван упростить процесс анализа трафика, а также сэкономить время администратора сервера на поиск неисправностей.
# -r - захват полезной нагрузки RTP-пакетов.


virt-manager - команда запуска Virtual Machine Manager


lvcreate -n kvm-deb10bgwsa -L 10G /dev/vg_daedalus --yes - установка debian 10 на вирутальную машину kvm
# lvcreate - создание логического тома.
# -n - имя этого тома.
# -L - его размер
# 10G - 10 Гигабайт 
# /dev/vg_daedalus - путь до vg
# --yes - что бы не задавал лишних вопросов)


vi /etc/apt/sources.list - файл со списком репозиториев Debian
# vi - от англ. visual, по-русски читается "ви-ай" - серия текстовых редакторов операционной системы семейства UNIX.


cat /etc/resolv.conf -просмотр информации, которая позволяет компьютеру преобразовать буквенно-цифровые доменные имена в цифровые IP адреса. 
